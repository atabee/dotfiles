#! /usr/bin/env bash

# ============================================
# 非推奨 (DEPRECATED)
# ============================================
# このスクリプトは非推奨です。
# 新しいNixベースのインストール方法を使用してください。
#
# 推奨インストール:
#   nix/README.md を参照
#
# クイックインストール:
#   git clone https://github.com/atabee/dotfiles ~/.dotfiles
#   cd ~/.dotfiles
#   nix run home-manager/master -- switch --flake ".#$(uname -m)-$(uname -s | tr '[:upper:]' '[:lower:]')" --impure
# ============================================

newline() {
    printf "\n"
}

println() {
    printf "\033[37;1m%s\033[m\n" "$*"
}

warning() {
    printf "\033[31m%s\033[m\n" "$*"
}

err() {
    printf "\033[31m%s\033[m\n" "✖ $*" 1>&2
}

is_exists() {
    which "$1" >/dev/null 2>&1
    return $?
}

install_brew() {
    if is_exists "brew" || [[ $(uname) != 'Darwin' ]] ; then
        return 0
    fi

    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    brew install cask
}

install_git() {
    if is_exists "git" ; then
        return 0
    fi

    case "$(uname)" in
        *'Linux'*)
            if [[ -f /etc/os-release ]]; then
                sudo apt install git 
            fi
            ;;
        *'Darwin'*)
            install_brew
            brew install git
            ;;
        *)
            err "このOSでは使えません"
            exit 1
            ;;
    esac
}

# Path settings
DOTPATH=${DOTPATH:-$HOME/.dotfiles}
REPO=atabee/dotfiles

# install tools
install_git

# Download dotfiles
if [ ! -d "$DOTPATH" ]; then
  println "Downloading dotfiles..."
  git clone --recursive "https://github.com/$REPO" "$DOTPATH"
fi

# load environment
source $DOTPATH/etc/env.sh

println "Initialize..."
source $DOTPATH/etc/init.sh

println "Deploying..."
source $DOTPATH/etc/deploy.sh
